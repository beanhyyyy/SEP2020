<html>
  <body>
    <table align="center" class="table table-bordered">
      <h2 align="center" style="background-color:lightblue;">CUSTOMERS LIST</h2>
      <tr>
        <th>ID</th>
        <th>Image</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Gmail</th>
        <th>Time</th>
      </tr>
      <%  for (var item of customers) { %>
      <tr>
        <td>
          <a href="/admin/customers=<%= item._id %>">
            <%= item._id %>
          </a>
        </td>
        <td><img src="data:image/jpg;base64,<%= item.image %>" width="70" height="70" /></td>
        <td><%= item.name %></td>
        <td><%= item.phone %></td>
        <td><%= item.gmail %></td>
        <td><%= new Date(item.datetime).toLocaleString() %></td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
