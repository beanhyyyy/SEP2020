<htm>
  <body>
    <h1>REPORT LIST</h1>
   
    <table align="center" class="table table-bordered">
      <h2 align="center" style="background-color:lightblue;">CONTACT LIST</h2>
      <tr>
        <th>ID</th>
        <th>CustName</th>
        <th>CustPhone</th>
        <th>DateTime</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
      <%  for (var item of orders) { %>
      <tr>
        <td>
          <a href="/admin/listorders?id=<%= item._id %>">
            <%= item._id %>
          </a>
        </td>
        <td><%= item.custName %></td>
        <td><%= item.custPhone %></td>
        <td><%= new Date(item.datetime).toLocaleString() %></td>
        <td><%= item.status %></td>
        <td>
          <a href="/admin/updatestatus?id=<%= item._id %>&status=APPROVE">APPROVE</a>
          ||
          <a href="/admin/updatestatus?id=<%= item._id %>&status=CANCEL">CANCEL</a>
        </td>
      </tr>
      <% } %>

    </table>

    <% if (order) { %>
    <h1>ORDER DETAILS</h1>
    <table border="1">
      <tr>
        <th>ProductID</th>
        <th>ProductName</th>
        <th>Image</th>
        <th>Description</th>
        <th>Report</th>
      </tr>
      <% for (var item of order.items) { %>
      <tr>
        <td><%= item.products._id %></td>
        <td><%= item.products.name %></td>
        <td><img src="data:image/jpg;base64,<%= item.products.image %>" width="70" height="70" /></td>
        <td><%= item.products.description %></td>
        <td><%= item.quantity %></td>
      </tr>
      <% } %>
    </table>
    <% } %>
  </body>
</htm>